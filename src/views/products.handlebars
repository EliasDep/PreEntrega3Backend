<h1>Productos</h1>

<table id="main" role="grid">

  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Code</th>
    <th>Stock</th>
  </tr>

  {{#each products}}

    <tr>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td>{{this.code}}</td>
      <td>{{this.stock}}</td>
      
      <button type="submit">Agregar al carrito</button>
    </tr>

  {{/each}}
  
</table>

